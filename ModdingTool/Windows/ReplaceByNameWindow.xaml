<Window x:Class="ModdingTool.ReplaceByNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModdingTool"
        mc:Ignorable="d"
        Title="Replace files by name" Height="400" Width="600" MinHeight="150" MinWidth="600">
    <Border BorderThickness="0,1,0,0" BorderBrush="#EEE">
        <Grid>
            <Grid Height="22" Margin="7,7,7,0" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="75" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FolderPathTextBox" Text="" Grid.Column="0" VerticalAlignment="Top" Height="22" Padding="1" IsReadOnly="True" />
                <Button x:Name="BrowseButton" Content="Browse" Grid.Column="1" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Width="70" Height="22" Click="BrowseButton_Click"/>
            </Grid>

            <TextBlock x:Name="ResultsCount" Text="0 results:" Margin="10,47,7,7" VerticalAlignment="Top" />

            <Grid Margin="7,70,7,50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <DataGrid x:Name="SearchResults" RowHeaderWidth="0" GridLinesVisibility="None" Background="White" AutoGenerateColumns="False" CanUserSortColumns="True" CanUserAddRows="False" CanUserDeleteRows="False" BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File Name" Width="*" Binding="{Binding FileName}" IsReadOnly="True" />
                        <DataGridTemplateColumn Header="File To Replace" Width="*" IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding MatchingFiles}"
                                              SelectedItem="{Binding SelectedFile, Mode=TwoWay}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} ({1}, {2})">
                                                            <Binding Path="Name" />
                                                            <Binding Path="Archive" />
                                                            <Binding Path="Span" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Button x:Name="ReplaceButton" Content="Replace" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="ReplaceButton_Click"/>
        </Grid>
    </Border>
</Window>
