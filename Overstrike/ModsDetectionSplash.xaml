<Window x:Class="Overstrike.ModsDetectionSplash"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="Overstrike" Height="128" Width="600" MinWidth="320" WindowStartupLocation="CenterScreen">
	<Grid>
		<Border BorderThickness="0,1,0,0" BorderBrush="#CCC">
			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="80" Background="#FFF">
				<TextBlock x:Name="OverlayHeaderLabel" Text="Scanning Mods Library..." HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="15,15,0,0" />
				<TextBlock x:Name="OverlayOperationLabel" Text="(Current Path)" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="15,45,0,0" Foreground="#666" />
			</Grid>
		</Border>
	</Grid>
</Window>
